<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox android:id="@+id/checkbox_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading" />

    <CheckBox android:id="@+id/checkbox_gaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gaming" />

    <CheckBox android:id="@+id/checkbox_hiking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiking" />

    <CheckBox android:id="@+id/checkbox_cooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cooking" />

    <Button android:id="@+id/button_save_hobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Hobbies" />
</LinearLayout>
